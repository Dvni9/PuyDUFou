<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base -->
    <style name="Theme.PuyDuFouExperience" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/puy_du_fou_red</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/puy_du_fou_gold</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Tema sin ActionBar para Login -->
    <style name="Theme.PuyDuFouExperience.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Tema claro -->
    <style name="Theme.PuyDuFouExperience.Light" parent="Theme.PuyDuFouExperience">
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <!-- Tema oscuro -->
    <style name="Theme.PuyDuFouExperience.Dark" parent="Theme.PuyDuFouExperience">
        <item name="android:forceDarkAllowed">true</item>
    </style>
</resources>