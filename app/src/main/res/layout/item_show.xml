<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/showName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del espectáculo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/showSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horarios: 12:00, 14:00"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/showDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duración: 45 minutos"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/showZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zona: Arena Central"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/favoriteIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star"
            android:layout_gravity="end"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>